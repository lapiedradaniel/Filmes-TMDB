@model FilmesAPI.Models.Root

<h1 class="text-center text-white">Detalhes</h1>
<br />
<br />


<div class="container">
    <div class="d-flex flex-wrap">
        @foreach (var item in Model.results)
        {
            <img class="card-img-top" src="https://image.tmdb.org/t/p/w500/@item.poster_path" alt="Poster do Filme">

            <div class="card m-2" style="width: 25rem;">
                
                <div class="card-body">
                    <h3 class="card-title m-2">@item.title</h3>
                    <p>Orçamento:@item.vote_average</p>



                </div>
                
            </div>
        }
    </div>
</div>
